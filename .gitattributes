  <script>
    function formatarPreco(valor) {
      // Garante que o valor tenha duas casas decimais
      if (!valor.includes(',')) {
        valor += ',00';
      } else {
        const partes = valor.split(',');
        if (partes[1].length === 1) valor += '0';
        if (partes[1].length === 0) valor += '00';
      }
      
      // Remove caracteres não numéricos exceto vírgula
      valor = valor.replace(/[^\d,]/g, '');
      
      // Garante que tem apenas uma vírgula
      const partes = valor.split(',');
      if (partes.length > 2) {
        valor = partes[0] + ',' + partes.slice(1).join('');
      }
      
      return valor;
    }

    function validarFormulario() {
      const produto = document.getElementById('produto').value.trim();
      const preco = document.getElementById('preco').value.trim();
      const unidade = document.getElementById('unidade').value.trim();
      
      // Validação do preço
      const precoValido = /^\d+([,.]\d{1,2})?$/.test(preco);
      
      return produto !== '' && preco !== '' && precoValido && unidade !== '';
    }

    function ajustarTamanhoFonte(elemento) {
      const container = document.getElementById('textoContainer');
      const containerWidth = container.offsetWidth;
      const containerHeight = container.offsetHeight;
      
      // Começa com o tamanho máximo (5rem = 80px)
      let fontSize = 80;
      elemento.style.fontSize = fontSize + 'px';
      
      // Reduz até caber na largura
      while (elemento.scrollWidth > containerWidth * 0.95 && fontSize > 20) {
        fontSize--;
        elemento.style.fontSize = fontSize + 'px';
      }
      
      // Reduz mais se necessário para caber na altura
      while (elemento.scrollHeight > containerHeight * 0.4 && fontSize > 20) {
        fontSize--;
        elemento.style.fontSize = fontSize + 'px';
      }
    }

    function gerarCartaz() {
      if (!validarFormulario()) {
        alert('POR FAVOR, PREENCHA TODOS OS CAMPOS CORRETAMENTE:\n\n- PRODUTO: obrigatório\n- PREÇO: deve ser um valor válido (ex: 129,90)\n- UNIDADE: obrigatória');
        return;
      }

      const produto = document.getElementById('produto').value.toUpperCase();
      let preco = document.getElementById('preco').value;
      const unidade = document.getElementById('unidade').value.toUpperCase();

      // Formata o preço
      preco = formatarPreco(preco);
      const [reais, centavos] = preco.split(',');

      const cartazProduto = document.getElementById('cartazProduto');
      
      // Mantém quebras de linha
      cartazProduto.textContent = produto;
      document.getElementById('precoInteiro').textContent = reais;
      document.getElementById('precoCentavos').textContent = centavos.padEnd(2, '0');
      document.getElementById('cartazUnidade').textContent = unidade;
      
      // Ajusta o tamanho do texto do produto
      ajustarTamanhoFonte(cartazProduto);
      
      // Habilita o botão de salvar
      document.getElementById('saveBtn').disabled = false;
    }

    function salvarImagem() {
      const cartaz = document.getElementById('cartaz');
      const saveBtn = document.getElementById('saveBtn');
      
      saveBtn.innerHTML = '<svg class="animate-spin -ml-1 mr-2 h-5 w-5 text-white" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg> SALVANDO...';
      saveBtn.disabled = true;
      
      const options = {
        scale: 2,
        logging: false,
        useCORS: true,
        backgroundColor: null,
        allowTaint: true,
        letterRendering: true,
        width: cartaz.offsetWidth,
        height: cartaz.offsetHeight,
        windowWidth: cartaz.scrollWidth,
        windowHeight: cartaz.scrollHeight
      };
      
      html2canvas(cartaz, options).then(canvas => {
        const link = document.createElement('a');
        link.download = 'cartaz-oferta-' + new Date().toISOString().replace(/[:.]/g, '-') + '.png';
        link.href = canvas.toDataURL('image/png', 1.0);
        link.click();
        
        saveBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg> SALVAR COMO PNG';
        saveBtn.disabled = false;
      }).catch(err => {
        console.error('Erro ao gerar imagem:', err);
        alert('Ocorreu um erro ao gerar a imagem. Por favor, tente novamente.');
        
        saveBtn.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" /></svg> SALVAR COMO PNG';
        saveBtn.disabled = false;
      });
    }

    // Adiciona quebra de linha com Enter no campo produto
    document.getElementById('produto').addEventListener('keypress', function(e) {
      if (e.key === 'Enter') {
        e.preventDefault();
        const start = this.selectionStart;
        const end = this.selectionEnd;
        this.value = this.value.substring(0, start) + '\n' + this.value.substring(end);
        this.selectionStart = this.selectionEnd = start + 1;
      }
    });

    // Converte para maiúsculo automaticamente (exceto campo preço)
    document.querySelectorAll('input').forEach(input => {
      if (input.id !== 'preco') {
        input.addEventListener('input', function() {
          this.value = this.value.toUpperCase();
        });
      }
      
      // Enter em outros campos gera o cartaz
      if (input.id !== 'produto') {
        input.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            e.preventDefault();
            gerarCartaz();
          }
        });
      }
    });

    // Máscara para o campo de preço
    document.getElementById('preco').addEventListener('input', function() {
      let valor = this.value.replace(/[^\d,]/g, '');
      
      // Garante apenas uma vírgula
      const partes = valor.split(',');
      if (partes.length > 2) {
        valor = partes[0] + ',' + partes.slice(1).join('');
      }
      
      // Limita a 2 casas decimais
      if (partes.length > 1) {
        partes[1] = partes[1].slice(0, 2);
        valor = partes[0] + ',' + partes[1];
      }
      
      this.value = valor;
    });
  </script>
</body>
</html>